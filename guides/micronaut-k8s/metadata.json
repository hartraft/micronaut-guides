{
  "title": "Kubernetes and the Micronaut Framework",
  "intro": "Use Kubernetes to deploy your Micronaut applications.",
  "authors": ["Nemanja Mikic"],
  "tags": ["consul", "validation", "service-discovery"],
  "categories": ["Micronaut + Kubernetes", "Service Discovery"],
  "zipIncludes": ["auth.yml", "api/k8s.yml", "orders/k8s.yml", "users/k8s.yml"],
  "minimumJavaVersion": 17,
  "publicationDate": "2022-11-23",
  "apps": [
    {
      "name": "users",
      "features": ["discovery-kubernetes", "management", "security", "kubernetes", "serialization-jackson"],
      "packageName": "example.micronaut"
    },
    {
      "name": "orders",
      "features": ["discovery-kubernetes", "management", "security", "kubernetes", "serialization-jackson"],
      "packageName": "example.micronaut"
    },
    {
      "name": "api",
      "features": ["discovery-kubernetes", "management", "reactor", "kubernetes", "mockito", "serialization-jackson"],
      "packageName": "example.micronaut"
    }
  ]
}